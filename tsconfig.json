{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "build/types",
    "declarationMap": true
  },
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["node_modules", "build"]
}
